{% extends 'base.html.twig' %}

{% block title %}Le Carrée de la mode | Réinitialiser mon mot de passe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/informations.css') }}" />
{% endblock %}

{% block body %}
    <main id="informations" class="reset-password">
        <div class="container">
            <h1 class="title-primary">Réinitialiser mon mot de passe</h1>

            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
        
            {{ form_start(requestForm) }}
                <div class="grid-center">
                    <div class="col-4_sm-12" data-push-left="off-4_sm-0" data-push-right="off-4_sm-0">
                        <div class="field">
                            {{ form_row(requestForm.email) }}
                        </div>
                        <small style="text-align: center;">
                            Entrez votre adresse e-mail et nous vous enverrons un
                            lien pour réinitialiser votre mot de passe.
                        </small>
                    </div>

                    <div class="col-4_sm-12">
                        <button class="btn o-primary" style="margin: auto;">Envoyer un e-mail de réinitialisation</button>
                    </div>
                </div>
        
            {{ form_end(requestForm) }}
        </div>
    </main>
{% endblock %}
